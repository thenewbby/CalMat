<Window x:Name="Creation_Matrice" x:Class="CalMat.MatrixInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MatrixInput" Background="#FF2C2C2C" MinWidth="100" MinHeight="175" Width="200" Height="300" SizeChanged="Creation_Matrice_SizeChanged">
    <Grid Background="#002C2C2C">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button x:Name="Btn_matrix" Content="OK" Margin="0" Grid.Row="1" Background="#FF15ACBB" Click="Btn_matrix_Click" Height="30"/>
        <Grid x:Name="Grid_Tabeau" RenderTransformOrigin="0.5,0.5" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Grid>
</Window>
